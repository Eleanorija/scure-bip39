{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "rootDirs": ["."],
    "outDir": ".",
    "sourceMap": false,
    "noUnusedLocals": true,
    "declaration": true,
    "declarationMap": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "./*.d.ts", "./test/*.d.ts"]
}
